<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarWRPG.Views.PageSelectionLayout"
             BackgroundColor="{DynamicResource TitleBackgroundColor}">

    <StackLayout Orientation="Horizontal">
        <Button x:Name="PreviousPageButton"
                Clicked="PreviousPageAsync"
                HorizontalOptions="FillAndExpand"
                Style="{StaticResource DefaultButton}"/>
        <Button x:Name="SelectPageButton"
                Text="  Select  "
                Clicked="SelectPageAsync"
                HorizontalOptions="CenterAndExpand"
                Style="{StaticResource DefaultButton}"/>
        <Button x:Name="NextPageButton"
                Clicked="NextPageAsync"
                HorizontalOptions="FillAndExpand"
                Style="{StaticResource DefaultButton}"/>
    </StackLayout>

</ContentView>