<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarWRPG.Views.SkillPage">

    <StackLayout>
        
        <Label Text="{Binding Name}"
               FontAttributes="Bold"
               FontSize="Medium"/>

        <StackLayout Orientation="Horizontal">
            <Label Text="Rank: "/>
            <Label Text="{Binding Rank}"/>
            <Button Text="-" 
                    Clicked="RankDownClickedAsync"
                    IsEnabled="{Binding IsNotMin}"/>
            <Button Text="+" 
                    Clicked="RankUpClickedAsync"
                    IsEnabled="{Binding IsNotMax}"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal">
            <Label Text="Career: "/>
            <Switch IsToggled="{Binding IsCareer}"/>
        </StackLayout>

        <Button Text="Accept"
                Clicked="AcceptClickedAsync"/>

    </StackLayout>
    
</ContentPage>