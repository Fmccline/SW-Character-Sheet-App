<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarWRPG.Views.MainPage"
             xmlns:local="clr-namespace:StarWRPG.Views" 
             Title="FFG Character Sheet">

    <ContentPage.Padding>
        5,0,5,20
    </ContentPage.Padding>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="MediumStartBoldLabel" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="Start" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="Medium"/>
            </Style>
            <Style x:Key="MediumCenterBoldLabel" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="Medium"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Characters" Style="{StaticResource MediumCenterBoldLabel}"/>
            <!--Character Search Bar and Character Creation-->
            <StackLayout Orientation="Horizontal">
                <local:CustomSearchBar x:Name="Search"
                                       HorizontalOptions="FillAndExpand"
                                       Placeholder="Search by name"
                                       SearchCommand="{Binding SearchCommand}" 
                                       SearchCommandParameter="{Binding Text, Source={x:Reference Search}}"
                                       TextChangedCommand="{Binding DefaultSortCommand}"/>
                <Button Text="Create"
                        Clicked="CreateCharacterClickedAsync"/>
            </StackLayout>
            <!--Character List-->
            <Label Text="You have no characters. We should fix that!"
                   IsVisible="{Binding CharactersIsEmpty}"/>

            <ListView x:Name="charactersListView"
                      ItemsSource="{Binding Characters}"
                      ItemSelected="CharacterSelectedAsync"
                      IsVisible="{Binding CharactersIsNotEmpty}">
                <ListView.Header>
                    <Grid>
                        <Label Grid.Column="0" 
                           Text="Name" 
                           Style="{StaticResource StartBoldLabel}"/>
                        <Label Grid.Column="1" 
                           Text="Species" 
                           Style="{StaticResource StartBoldLabel}"/>
                        <Label Grid.Column="2" 
                           Text="Career" 
                           Style="{StaticResource StartBoldLabel}"/>
                        <Label Grid.Column="3" 
                           Text="Total XP" 
                           Style="{StaticResource StartBoldLabel}"/>
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Label Grid.Column="0" 
                                       Text="{Binding Name}" 
                                       Style="{StaticResource StartLabel}"/>
                                <Label Grid.Column="1" 
                                       Text="{Binding Species}" 
                                       Style="{StaticResource StartLabel}"/>
                                <Label Grid.Column="2" 
                                       Text="{Binding Career}" 
                                       Style="{StaticResource StartLabel}"/>
                                <Label Grid.Column="3" 
                                       Text="{Binding TotalXP}" 
                                       Style="{StaticResource StartLabel}"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>