<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarWRPG.Views.AddCriticalInjuryPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Severity" Style="{StaticResource CenterBoldLabel}" />
            <Entry Placeholder="Severity" Text="{Binding Severity}"/>
            <Label Text="Result" Style="{StaticResource CenterBoldLabel}" />
            <Entry Placeholder="Result" Text="{Binding Result}"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="Accept"
                        Clicked="AcceptClickedAsync"
                        HorizontalOptions="CenterAndExpand"/>
                <Button Text="Cancel"
                        Clicked="CancelClickedAsync"
                        HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>